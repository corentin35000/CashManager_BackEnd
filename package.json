{
  "name": "@cash-manager/website_backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "npm:check:dependencies": "ncu",
    "npm:update:all-packages": "ncu -u && npm i",
    "typecheck": "node ace type-check",
    "dev": "node ace serve --watch",
    "build": "npm run typecheck && node ace build --production",
    "adonis:swagger:generate": "node ace swagger:generate",
    "adonis:db:seed": "node ace db:seed",
    "adonis:db:truncate": "node ace db:truncate",
    "adonis:db:wipe": "node ace db:wipe",
    "adonis:migration:fresh:develop": "node ace migration:fresh --seed",
    "adonis:migration:run:develop": "node ace migration:run",
    "adonis:migration:run:staging-prod": "node ace migration:run --force",
    "test:unit-functional:dev": "npm run adonis:swagger:generate && node ace test --watch",
    "test:unit-functional:test-staging-prod": "npm run adonis:swagger:generate && node ace test",
    "lint:ts": "node ace type-check",
    "lint:prettier": "prettier --check .",
    "lint": "npm run lint:ts && npm run lint:prettier",
    "lintfix": "prettier --write --list-different . && npm run lint --fix && npm run lint:ts --fix",
    "prettier:format": "prettier --write .",
    "postinstall": "husky install",
    "postbuild": "npm run adonis:swagger:generate && cp -a docs/swagger build/docs"
  },
  "dependencies": {
    "@adonisjs/auth": "^8.2.3",
    "@adonisjs/bouncer": "^2.3.0",
    "@adonisjs/core": "^5.9.0",
    "@adonisjs/drive-s3": "^1.3.3",
    "@adonisjs/i18n": "^1.6.0",
    "@adonisjs/lucid": "^18.4.2",
    "@adonisjs/mail": "^8.2.1",
    "@adonisjs/repl": "^3.1.11",
    "@adonisjs/validator": "^12.5.0",
    "@adonisjs/view": "^6.2.0",
    "adonis5-swagger": "^1.4.1",
    "luxon": "^3.4.3",
    "mjml": "^4.14.1",
    "mysql2": "^3.6.3",
    "phc-argon2": "^1.1.4",
    "phc-bcrypt": "^1.0.8",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21",
    "stripe": "^14.3.0"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.9.6",
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@japa/preset-adonis": "^1.2.0",
    "@japa/runner": "^2.5.1",
    "@types/node": "^20.8.10",
    "@types/proxy-addr": "^2.0.2",
    "@types/source-map-support": "^0.5.9",
    "adonis-preset-ts": "^2.1.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "npm-check-updates": "^16.14.6",
    "pino-pretty": "^10.2.3",
    "prettier": "^3.0.3",
    "typescript": "~5.1.0",
    "youch": "^3.3.2",
    "youch-terminal": "^2.2.3"
  }
}
